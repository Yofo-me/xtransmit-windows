<Window x:Class="XTransmit.View.WindowIPAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        Title="{StaticResource ip_title}">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" BasedOn="{StaticResource ButtonToolbar}"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- toolbar buttons -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ToolBarTray Grid.Column="0" IsLocked="True">
                <ToolBar IsOverflowOpen="False">
                    <Button ToolTip="{StaticResource _save}" 
                            Content="{md:PackIcon Kind=ContentSave, Size=24}"
                            Command="{Binding Path=CommandSaveData}"/>

                    <Button ToolTip="{StaticResource _ping}"
                            Content="{md:PackIcon Kind=ChartAreaspline, Size=24}"
                            Command="{Binding Path=CommandPingCheck}"/>

                    <Separator />

                    <Button ToolTip="{StaticResource ip_new_table_form_file}" 
                            Content="{md:PackIcon Kind=TablePlus, Size=24}"
                            Command="{Binding Path=CommandNewTable}"/>

                    <Button ToolTip="{StaticResource ip_import_data_form_file}"
                            Content="{md:PackIcon Kind=TableColumnPlusAfter, Size=24}"
                            Command="{Binding Path=CommandAddData}"/>
                </ToolBar>
            </ToolBarTray>

            <!-- running progress -->
            <Grid Grid.Column="1" Background="{DynamicResource MaterialDesignToolBarBackground}">
                <ProgressBar Margin="10"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="{Binding Path=Progress.IsIndeterminate}"
                             Value="{Binding Path=Progress.Value}"/>
            </Grid>
        </Grid>

        <!-- list of ip tables -->
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="0, 0, 2, 0"
                BorderBrush="{DynamicResource MaterialDesignDivider}">
            <ListView x:Name="xListView" Margin="10"
                      SelectionMode="Single"
                      SelectedIndex="0"
                      ItemsSource="{Binding Path=IPTables, Mode=OneWay, IsAsync=True}"
                      SelectionChanged="ListView_SelectionChanged">
                <ListView.ContextMenu>
                    <ContextMenu Background="{DynamicResource MaterialDesignBackground}">
                        <MenuItem Header="{StaticResource ip_copy_table_name}" 
                                  Icon="{md:PackIcon Kind=ClipboardTextOutline}"
                                  Command="{Binding Path=CommandCopyTableName}"/>
                        <MenuItem Header="{StaticResource ip_delete_selected_table}"
                                  Icon="{md:PackIcon Kind=TableRemove}"
                                  Command="{Binding Path=CommandDeleteTable}"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" 
                                        Header="{StaticResource _table}"
                                        DisplayMemberBinding="{Binding Path=TableName}"/>
                        
                        <GridViewColumn Width="Auto" 
                                        Header="{StaticResource _count}" 
                                        DisplayMemberBinding="{Binding Path=Rows.Count}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- ip table -->
        <DataGrid Grid.Row="1" Grid.Column="1" Margin="10" 
                  GridLinesVisibility="Horizontal"
                  SelectionMode="Extended"
                  CanUserDeleteRows="True"
                  CanUserSortColumns="True"
                  ItemsSource="{Binding Path=IPDataTable}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP Address" Width="Auto" Binding="{Binding Path=IP}"/>
                <DataGridTextColumn Header="Ping" Width="Auto" Binding="{Binding Path=Ping}"/>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu Background="{DynamicResource MaterialDesignBackground}">
                    <MenuItem Header="{StaticResource _delete}"
                              Icon="{md:PackIcon Kind=Delete}"
                              Command="ApplicationCommands.Delete"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
